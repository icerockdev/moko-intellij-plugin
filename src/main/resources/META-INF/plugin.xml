<idea-plugin>
    <id>dev.icerock.moko.intellij-plugin</id>
    <name>MOKO</name>

    <vendor email="support@icerockdev.com" url="https://www.icerockdev.com">IceRock Development</vendor>
    <version>0.1.0</version>

    <description><![CDATA[
    Plugin is addition to <a href="https://moko.icerock.dev/">MOKO libraries</a> and <a href="https://github.com/icerockdev/moko-template">moko-template</a>.<br>
    Plugin allow add feature-modules with moko libraries and predefined structure.
    ]]></description>

    <idea-version since-build="173.0" />
    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <moduleType id="moko_feature_module" implementationClass="com.icerockdev.moko.intellij.MokoFeatureModule"/>
    </extensions>
    <change-notes><!-- language: HTML --><![CDATA[
		<h3>0.1.0</h3>
		<ul>
			<li>Allow to enter project package prefix on module setup</li>
		</ul>
		]]>
    </change-notes>

</idea-plugin>